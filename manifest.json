{
  "manifest_version": 3,
  "name": "Vim Nav + Link Hints",
  "version": "1.0",
  "description": "Vim scrolling, tab switch, and link hinting (f).",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { "48": "icon.svg" }
}
