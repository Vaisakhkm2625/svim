{
  "manifest_version": 3,
  "name": "svim",
  "version": "1.0",
  "description": "Vim scrolling, tab switch, and link hinting (f).",
  "permissions": ["activeTab", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

    "browser_specific_settings": {
        "gecko": {
            "id": "svim@nixifying.my.id"
        }
    },
  "icons": { "48": "icon.svg" }
}
